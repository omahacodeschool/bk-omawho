<div id="name_game_container">
  <div class="row">
    <div class="large-4 columns">
      <p></p>
    </div>
    <div class="large-4 columns">
      <div id="upcoming_events_heading"><h1>NAME GAME</h1></div>
    </div>
    <div class="large-4 columns">
      <p></p>
    </div>
  </div>
  <div class="row">
    <div class="large-2 columns">
      <p></p>
    </div>
    <div class="large-8 columns">
      <div id="name_game_image">
        <%= image_tag(@profile_img, :alt => "#{@user.first_name} #{@user.last_name}", :id => "profile_photo_preview", :class => "img-polaroid") %>  
      </div>
      <div id="name_game_text">
        <div>
          <%= form_tag check_quiz_path do %>
            <div>
              <p>What's my name?</p>
              <%= text_field_tag :name_guess, nil, :placeholder => "First and last name please" %>     
            </div>
            <div>
              <p>Where do I work?</p>
              <div>
                <% @companies.each do |c| %>
                  <li class="name_game_company gray_choice">
                    <% if (c.nil? || c == "") %>
                      <%= radio_button_tag(:company, "No Company Specified") %>
                      <%= label_tag :company, "No Company Specified" %>
                    <% else %>
                      <%= radio_button_tag(:company, c) %>
                      <%= label_tag :company, c %>
                    <% end %>
                  </li>
                <% end %>
              </div>
            </div>
            <div>
              <%= hidden_field_tag :user_id, @user.id %>
            </div>
        </div>
      </div>
    </div>
    <div class="large-2 columns">
      <p></p>
    </div>
  </div>
  <div class="row">
    <div class="large-2 columns">
      <p>&nbsp;</p>
    </div>
    <div class="large-8 columns submit_div">
      <%= submit_tag "TAKE A GUESS", :name => nil, class: "submit_button" %>
      <% end %>
    </div>
    <div class="large-2 columns">
      <p>&nbsp;</p>
    </div>
  </div>
  <div class="row">
    <div class="large-12 columns">
      <p></p>
    </div>
  </div>
</div>