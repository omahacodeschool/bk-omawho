<div id="menubar" class="hide-for-small-only">
  <div class="row">
    <div class="small-6 large-6 columns">
      <div class="row">
        <div class="small-6 large-6 columns" id="topnavtext">
          <% if @filter_category %>
            <%= "Showing '#{@filter_category.name}' Faces" %>
          <% else %>
            Filter faces by choosing category:
          <% end %>
        </div>
        <div class="small-6 large-6 columns" id="topnavtext">Category
          <div class="drop_down" id="category_filter">
            <ul>
              <li id="category_filter_all">
                <%= link_to "All", category_path(0), :class => "category_all" %>
              </li>
              <% Category.all.each do |c| %>
                <li id="category_filter_<%= c.id %>">
                  <%= link_to c.name, category_path(c.id), :class => "category_#{c.id}" %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <!-- Search for Names form -->
    <div class="small-6 large-6 columns">
      <%= form_tag name_search_path, :method => 'get' do %>
        <div class="row">
          <div class="small-10 large-10 columns"><%= search_field_tag :name_query, params[:name_query], :id=>"search_field"%></div>
          <div class="small-2 large-2 columns"><%= submit_tag "Search", :name => nil, :id => "search_button" %></div>
        </div>
      <% end %>
    </div>
  </div>
</div>
