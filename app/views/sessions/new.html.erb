<div id="login_form" class="row">
  <h1>Log In</h1>
  
  <%= form_tag sessions_path, :method => :post do %>

  <div class="row">
    <div class="small-3 large-3 columns whitebg" >
      <p class="username sprite"></p>
    </div>
    <div class="small-9 large-9 columns">
      <%= text_field_tag :email, params[:email], :placeholder => "Email", :class => "log_in_email" %>
    </div>
  </div>

  <div class="row">
    <div class="small-3 large-3 columns whitebg" >
      <p class="password sprite"></p>
    </div>
    <div class="small-9 large-9 columns">
      <%= password_field_tag :password, params[:password], :placeholder => "Password" %>
    </div>
  </div>
  
  <div class="field">
    <%= check_box_tag :remember_me, 1, params[:remember_me] %>
    <%= label_tag :remember_me %>
  </div>
  <div class="actions"><%= submit_tag "Log In", :class => "log_in_button" %></div>
  <% end %>
  
  <hr>
  
  <h1>Donâ€™t have an account?</h1>
  <div class="actions"><%= link_to "Sign up for free", :signup, :class => "log_in_button" %></div>
  
  <hr>

  <h1>Forgot Password?</h1>
  
  <%= form_tag password_resets_path, :method => :post do %>
    <div class="row">
      <div class="small-3 large-3 columns whitebg">
        <p class="email sprite"></p>
      </div>
      <div class="small-9 large-9 columns">
        <%= text_field_tag :email, params[:email], :placeholder => "Email" %><br>
      </div>
    </div>
    <div class="reset_password"><%= submit_tag "Reset my password!", :class => "log_in_button" %></div>
  <% end %>
</div>